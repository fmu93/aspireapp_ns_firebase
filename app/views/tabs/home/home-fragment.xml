<!--
This is the component view that represents the 'Home' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<StackLayout class="page-content" loaded="onLoaded">
    <Button text="Select images" tap="{{ imgSelect }}" class="button2"  horizontalAlignment="center"/>
    <Button text="Upload images" tap="{{ imgUpload }}" class="button2"  horizontalAlignment="center"/>
    <Button text="Download images" tap="{{ imgDownload }}" class="button2"  horizontalAlignment="center"/>
    <Button text="getThisUser" tap="{{ getThisUser }}" class="button2"  horizontalAlignment="center"/>
    <Button text="Show user model" tap="{{ showUserModel }}" class="button2"  horizontalAlignment="center"/>

    <Label class="page-icon fa" text="&#xf015;"></Label>
    <Label class="page-placeholder" text="<-- Get image from files -->"></Label>
    <Image src="{{ imgSrc }}" tap="{{ imgTap }}" stretch="none" ></Image>
</StackLayout>