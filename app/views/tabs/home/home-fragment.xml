<StackLayout class="page-content" loaded="onLoaded" xmlns:lv="nativescript-pro-ui/listview">
    <GridLayout id="form-content" class="form-content" rows="auto, *" loaded="onContentLoaded">
        <ScrollView row="0" class="fields-section">
            <StackLayout>
                <GridLayout columns="3*, *" verticalAlignment="top">
                    <Label col="0" text="{{ _username }}" class="username" id="lblUsername"/>
                    <!-- <Image col="1" src="res://logo" id="image" class="logo-picture" stretch="none" horizontalAlignment="center" tap="onProfilePictureTapped"/> -->
                </GridLayout>
                <StackLayout class="line"/>
                <GridLayout columns="*, *, *" rows="auto, auto" verticalAlignment="top">
                    <Label text="Type:" class="field-title" row="0" col="0" />
                    <Label text="Gender:" class="field-title" row="0" col="1" />
                    <Label text="Birth year:" class="field-title" row="0" col="2" />
                    <TextField id="txtType" text="{{ type }}" hint="type" class="field" row="1" col="0" tap="onTextInputTapped" />
                    <TextField id="txtGender" text="{{ gender }}" hint="gender" class="field" row="1" col="1" tap="onTextInputTapped" />
                    <TextField id="txtYear" text="{{ birthYear }}" hint="birthYear" class="field" row="1" col="2" tap="onTextInputTapped" />
                </GridLayout>              
                <GridLayout rows="auto, auto" verticalAlignment="top">
                    <Label text="Bio:" class="field-title" row="0" />
                    <TextField id="txtBio" text="{{ bio }}" textWrap="true" class="field-multiline" row="1" tap="onTextInputTapped" />
                </GridLayout>
                <GridLayout columns="auto,*, auto" verticalAlignment="top">
                    <Button text="Update &#xf044;" class="update fa" tap="{{ updateProperties }}" col="0"/>
                    <Button text="ADD &#xf03e;" class="update fa" tap="{{ imgAdd }}" col="2"/>
                </GridLayout>
                <StackLayout class="line"/>
            </StackLayout>
        </ScrollView>

        <lv:RadListView row="1" id="imageList" items="{{ loadedImgList }}" itemTap="{{ imgTap }}" marginBottom="4" class="list-group"> 
            <lv:RadListView.listViewLayout>
                <lv:ListViewGridLayout scrollDirection="Vertical" spanCount="2"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <StackLayout class="list-group-item">
                    <Label text="{{ filename }}" marginLeft="10" /> 
                    <Image src="{{ url }}" margin="10" horizontalAlignment="center" />
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>

    </GridLayout>
</StackLayout>