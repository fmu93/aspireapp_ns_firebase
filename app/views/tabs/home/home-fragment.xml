<StackLayout class="page-content" loaded="onLoaded" xmlns:lv="nativescript-pro-ui/listview" xmlns:f="nativescript-fresco">
    <GridLayout id="form-content" class="form-content" rows="auto, *" loaded="onContentLoaded">
        <ScrollView row="0" class="fields-section">
            <StackLayout>
                <GridLayout columns="auto, *" verticalAlignment="top">                    
                    <Image col="0" src="{{ profile_picture }}" id="image" class="logo-picture" horizontalAlignment="center" tap="onProfilePictureTapped"/>
                    <Label col="1" text="{{ username }}" class="username" id="lblUsername"/>
                </GridLayout>
                <GridLayout columns="*, *, *, *, *, *" rows="auto" verticalAlignment="top">
                    <Label text="Followed: " class="field-title"  col="0" />
                    <Label text="{{ followed_by }}" class="field-title" col="1" />
                    <Label text="Following: " class="field-title" col="2" />
                    <Label text="{{ follows }}" class="field-title" col="3" />
                    <Label text="Media: " class="field-title" col="4" />
                    <Label text="{{ media }}" class="field-title" col="5" />
                </GridLayout>
                <StackLayout class="line"/>
                <GridLayout columns="*, *, *" rows="auto, auto" verticalAlignment="top">
                    <Label text="Type:" class="field-title" row="0" col="0" />
                    <Label text="Gender:" class="field-title" row="0" col="1" />
                    <Label text="Birth year:" class="field-title" row="0" col="2" />
                    <TextField id="txtType" text="{{ type }}" hint="type" class="field" row="1" col="0" />
                    <TextField id="txtGender" text="{{ gender }}" hint="gender" class="field" row="1" col="1" />
                    <TextField id="txtYear" text="{{ birthYear }}" hint="birthYear" class="field" row="1" col="2" />
                </GridLayout>              
                <GridLayout rows="auto, auto" verticalAlignment="top">
                    <Label text="Bio:" class="field-title" row="0" />
                    <TextField id="txtBio" text="{{ bio }}" textWrap="true" class="field-multiline" row="1" />
                </GridLayout>
                <GridLayout columns="auto,*, auto" verticalAlignment="top">
                    <Button text="Update &#xf044;" class="update fa" tap="{{ updateProperties }}" col="0"/>
                    <Button text="ADD &#xf03e;" class="update fa" tap="{{ imgAdd }}" col="2"/>
                </GridLayout>
                <StackLayout class="line"/>
            </StackLayout>
        </ScrollView>

        <lv:RadListView row="1" id="imageList" items="{{ loadedImgList }}" itemTap="{{ imgTap }}" marginBottom="4" class="list-group"> 
            <lv:RadListView.listViewLayout>
                <lv:ListViewGridLayout scrollDirection="Vertical" spanCount="2"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <GridLayout rows="*" backgroundColor="White">
                    <GridLayout rows="*" columns="*" marginBottom="2" >
                        <f:FrescoDrawee
                        horizontalAlignment="stretch"
                        height="250"
                        imageUri="{{ images.low_resolution.url }}"/>
                        <GridLayout verticalAlignment="bottom">
                            <StackLayout backgroundColor="#AAFFFFFF" paddingTop="4" paddingBottom="4" paddingLeft="16" paddingRight="16">
                                <Label text="{{ caption.text }}"/>
                            </StackLayout>
                        </GridLayout>
                    </GridLayout>
                </GridLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>

    </GridLayout>
</StackLayout>