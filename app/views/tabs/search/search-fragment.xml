<!--
This is the component view that represents the 'Search' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<StackLayout class="page-content" loaded="onLoaded">
    <GridLayout id="form-content" class="form-content" rows="auto,*,auto" loaded="onContentLoaded">
        <Label row="0" text="{{ guestName }}" width="500" margin="10" horizontalAlignment="center" class="page-placeholder"/> 
        <ScrollView row="1">
            <!-- <Image src="{{ imgA }}" margin="10" id="imageA" row="1" horizontalAlignment="center" tap="{{ imgAtap }}"/>
            <StackLayout class="top-border" row="2"/>
            <Image src="{{ imgB }}" margin="10" id="imageB" row="3" horizontalAlignment="center" tap="{{ imgBtap }}"/> -->

            <ListView id="imageList" items="{{ imgUrls }}">
                <ListView.itemTemplate>
                    <Image src="{{ url }}" margin="10" horizontalAlignment="center"/>
                </ListView.itemTemplate>
            </ListView>

        </ScrollView>
        <Button text="Next user &#xf101;" class="update fa" tap="{{ nextUser }}" row="2"/>
    </GridLayout>
</StackLayout>