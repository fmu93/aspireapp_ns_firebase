<!--
This is the component view that represents the 'Search' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<StackLayout class="page-content" loaded="onLoaded">
    <GridLayout id="form-content" class="form-content" rows="auto,*,auto" loaded="onContentLoaded">
        <ScrollView row="0" class="fields-section">
            <GridLayout columns="3*, *" verticalAlignment="top">
                <Label col="0" text="{{ guestName }}" class="username" /> 
                <!-- <Image col="1" src="res://logo" id="image" class="logo-picture" stretch="none" horizontalAlignment="center" tap="onProfilePictureTapped"/> -->
            </GridLayout>
        </ScrollView>
        <ScrollView row="1">

            <ListView id="imageList" items="{{ loadedImgList }}">
                <ListView.itemTemplate>
                    <Image src="{{ url }}" margin="10" horizontalAlignment="center"/>
                </ListView.itemTemplate>
            </ListView>

        </ScrollView>
        <Button text="Next user &#xf101;" class="update fa" tap="{{ nextUser }}" row="2"/>
    </GridLayout>
</StackLayout>